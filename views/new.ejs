<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('./partials/header.ejs') %>

        <nav>
            <a href="/">Home</a>

            <a href="/logout">Log out</a>

        </nav>
    </header>
    <div class="container product">
        <h1>ADD NEW PRODUCT</h1>
        <form action='/products/new_submit' method="POST">
            <div class="form-group">
                <label for='name'>Name of product</label>
                <input type='text' name='name' placeholder="enter product's name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for='description'>Description</label>
                <input type='text' name='description' placeholder="Enter description" class="form-control" required>
            </div>
            <div class="form-group">
                <label for='img'>Image</label>
                <input type='text' name='img' placeholder="link of image" class="form-control" required>
            </div>
            <div class="row">
                <div class="col">
                    <label for='price'>Price</label>
                    <input type='number' name='price' placeholder="enter price of product" class="form-control" min='0'
                        required>
                </div>
                <div class="col">
                    <label for='qty'>Quantity</label>
                    <input type='number' name='qty' placeholder="enter quantity of product" class="form-control" min='0'
                        required>
                </div>
            </div>
            <div class="add">
                <button type="submit" class="btn btn-primary">Add New Product</button>
            </div>
        </form>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>

</html>